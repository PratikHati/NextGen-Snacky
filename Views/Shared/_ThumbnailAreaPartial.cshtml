@model IEnumerable<MenuItem>

@if (Model.Count() > 0)
{
    <div class="col-12">

        @*-----------------------------------ToString display only category-------------------------------------- *@
        <div class="row">
            <h3 class="text-success">
                @Model.FirstOrDefault().Category.Name
            </h3>
        </div>

        @foreach (var item in Model)
        {
            <div class="border border-dark rounded col-12" style="margin-bottom:10px; margin-top:10px; padding:10px;">
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        <image src="@item.Image" width="99%" style="border-radius:5px; border:1px solid #808080" />
                    </div>

                    <div class="col-md-9 col-sm-12">
                        <div class="row pr-3">
                            <div class="col-8">
                                <label class="text-dark" style="font-size:20px;">
                                    <h4>@item.Name</h4>
                                </label>
                                @if (item.Spicyness == "1")
                                {
                                    <image src="/images/mild.png" title="Mild"></image>
                                }
                                @if (item.Spicyness == "2")
                                {
                                    <image src="/images/spicy.png" title="Mild"></image>
                                }
                                @if (item.Spicyness == "3")
                                {
                                    <image src="/images/verySpicy.png" title="Mild"></image>
                                }
                            </div>
                            <div class="col-4 text-right" style="color:maroon">
                                <h4>Price: @item.Price $</h4>
                            </div>
                        </div>

                        <div class="row col-12 text-justify d-none d-md-block">
                            <p>
                                Description : @item.Description
                            </p>
                        </div>

                        <div class="col-md-3 col-sm-12 text-right" >
                            <a asp-action="Details" class="btn btn-success form-control" asp-route-id="@item.Id"> 
                            Details
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        }
        <div class="p-4"></div>
    </div>
}