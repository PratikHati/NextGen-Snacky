@page
@model RegisterModel
@using NextGen_Snacky.Utility;

@{
    ViewData["Title"] = "Register";
}


<br />
<h2 class="text-dark font-weight-bold">
    Create New Account
</h2>

<br />

<form method="post" asp-route-returnUrl="@Model.ReturnUrl">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @*===============================Name==============================*@
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.Name" class="col-form-label font-weight-bold"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.Name" class="form-control" />
            </div>
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>

        @*===============================Email==============================*@

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.Email" class="col-form-label font-weight-bold"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.Email" class="form-control" />
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        @*===============================Phone==============================*@

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.Phone" class="col-form-label font-weight-bold"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.Phone" class="form-control" />
            </div>
            <span asp-validation-for="Input.Phone" class="text-danger"></span>
        </div>

        @*===============================City==============================*@

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.City" class="col-form-label font-weight-bold"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.City" class="form-control" />
            </div>
            <span asp-validation-for="Input.City" class="text-danger"></span>
        </div>

        @*===============================Address==============================*@

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.Address" class="col-form-label font-weight-bold"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.Address" class="form-control" />
            </div>
            <span asp-validation-for="Input.Address" class="text-danger"></span>
        </div>

        @*===============================state==============================*@

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.State" class="col-form-label font-weight-bold"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.State" class="form-control" />
            </div>
            <span asp-validation-for="Input.State" class="text-danger"></span>
        </div>

        @*===============================PinCode==============================*@

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.PinCode" class="col-form-label font-weight-bold"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.PinCode" class="form-control" />
            </div>
            <span asp-validation-for="Input.PinCode" class="text-danger"></span>
        </div>

        @*===============================Password==============================*@

        <div class="form-group row">

            <div class="col-2">
                <label asp-for="Input.Password" class="col-form-label font-weight-bold"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.Password" class="form-control" />
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>

        </div>

        @*===============================Confirm_Password==============================*@


        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Input.ConfirmPassword" class="col-form-label font-weight-bold"></label>
            </div>
            <div class="col-5">
                <input asp-for="Input.ConfirmPassword" class="form-control" />
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        @if (User.IsInRole(SD.ManageUser))      //if User is Manager, then only
        {
            <div class="form-group row">
                <div class="col-2">
                    
                </div>
                <div class="col-5">
                    <input type="radio" name="common" value="@SD.ManageUser" checked /> @SD.ManageUser
                    <input type="radio" name="common" value="@SD.KitchenUser" checked /> @SD.KitchenUser
                    <input type="radio" name="common" value="@SD.FrontDeskUser" checked /> @SD.FrontDeskUser 
                </div>
            </div>
        }

    </div>

    <button type="submit" class="btn btn-outline-success bg-dark form-control">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
